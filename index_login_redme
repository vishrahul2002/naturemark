                <input type="password" class="input-field mbottom" name="" id="" placeholder="Enter Password" required>
                <input type="checkbox" name="" class="check-box" id=""><span class="primary-color">Remember Password</span>
                <button type="submit" class="submit-btn">Log In</button>
            </form>

             <!-- ========== Registration Form ========== -->
